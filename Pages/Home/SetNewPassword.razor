@page "/set-new-password"
@inject NavigationManager NavigationManager

<div class="set-new-password-container row">
    <div class="left column">
        <div class="form column">
            <div class="group column">
                <h3 class="h3">Set new password</h3>
                <p class="typography__body-2 text">Please, type your new password and click confirm. </p>
            </div>
            <IgbInput DisplayType="InputType.Text" Label="Password" Placeholder="Min 8 characters" Outlined="true" class="input" set-new-password-scope></IgbInput>
            <IgbInput DisplayType="InputType.Text" Label="Password" Placeholder="Repeat password" Outlined="true" class="input" set-new-password-scope></IgbInput>
            <IgbButton Variant="ButtonVariant.Contained" @onclick="@(e => Navigate("/"))" class="button" set-new-password-scope>
                confirm new password
                <IgbRipple></IgbRipple>
            </IgbButton>
        </div>
    </div>
    <div class="right column"></div>
</div>

@code {
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
