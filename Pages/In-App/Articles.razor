                            </IgbCardActions>
                        </IgbCard>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private TravelAppData.ArticlesSource1Type[] travelAppDataArticlesSource1 = Array.Empty<TravelAppData.ArticlesSource1Type>();
    private TravelAppData.ArticlesSource2Type[] travelAppDataArticlesSource2 = Array.Empty<TravelAppData.ArticlesSource2Type>();
    private TravelAppData.ArticlesSource3Type[] travelAppDataArticlesSource3 = Array.Empty<TravelAppData.ArticlesSource3Type>();
    private TravelAppData.ArticlesSource4Type[] travelAppDataArticlesSource4 = Array.Empty<TravelAppData.ArticlesSource4Type>();
    private TravelAppData.SelectedArticlesType[] travelAppDataSelectedArticles = Array.Empty<TravelAppData.SelectedArticlesType>();

    protected override async Task OnInitializedAsync()
    {
        travelAppDataArticlesSource1 = await HttpClient.GetFromJsonAsync<TravelAppData.ArticlesSource1Type[]>("static-data/travel-app-data-articles-source-1.json") ?? travelAppDataArticlesSource1;
        travelAppDataArticlesSource2 = await HttpClient.GetFromJsonAsync<TravelAppData.ArticlesSource2Type[]>("static-data/travel-app-data-articles-source-2.json") ?? travelAppDataArticlesSource2;
        travelAppDataArticlesSource3 = await HttpClient.GetFromJsonAsync<TravelAppData.ArticlesSource3Type[]>("static-data/travel-app-data-articles-source-3.json") ?? travelAppDataArticlesSource3;
        travelAppDataArticlesSource4 = await HttpClient.GetFromJsonAsync<TravelAppData.ArticlesSource4Type[]>("static-data/travel-app-data-articles-source-4.json") ?? travelAppDataArticlesSource4;
        travelAppDataSelectedArticles = await HttpClient.GetFromJsonAsync<TravelAppData.SelectedArticlesType[]>("static-data/travel-app-data-selected-articles.json") ?? travelAppDataSelectedArticles;
    }
}
