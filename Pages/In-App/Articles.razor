                        }
                    </div>
                    <div class="group_3 column">
                        @foreach (var item in travelAppDataArticlesSource4)
                        {
                            <IgbCard Outlined="true" class="card" articles-scope>
                                <IgbCardMedia>
                                    <img src="@item.Image_url" />
