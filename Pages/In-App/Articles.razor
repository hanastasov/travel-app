                                    </IgbButton>
                                    <IgbButton Variant="ButtonVariant.Flat">
                                        <span class="material-icons">share</span>
                                        <IgbRipple></IgbRipple>
                                    </IgbButton>
                                    <IgbButton Variant="ButtonVariant.Flat" class="button" articles-scope>
                                        Read
                                        <IgbRipple></IgbRipple>
                                    </IgbButton>
                                </IgbCardActions>
                            </IgbCard>
                        }
                    </div>
                    <div class="group_7 column">
                        @foreach (var item in travelAppDataArticlesSource3)
                        {
                            <IgbCard Outlined="true" class="card" articles-scope>
                                <IgbCardMedia>
                                    <img src="@item.Image_url" />
                                </IgbCardMedia>
                                <IgbCardHeader>
